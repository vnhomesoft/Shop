@using Shop.Common.Constants
@model Shop.Models.ViewModels.ProductView

@{
	ViewBag.Title = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<!-- For upload file, specify enctype for form -->
@using (Html.BeginForm(Controllers.Action.CREATE, Controllers.PRODUCTS, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Product</h4>
		<hr />
		@{Html.RenderPartial("_PartialProductInput");}
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
@section Breakcrumb{
	<ol class="breadcrumb float-sm-right">
		<li class="breadcrumb-item"><a href="@Url.Action("Index")">Home</a></li>
		<li class="breadcrumb-item active">Create</li>
	</ol>
}